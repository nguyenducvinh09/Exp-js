extends ../layouts/common
block content	
	h3 New User:
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action='/users/create' method='POST' enctype="multipart/form-data")
			label(for='name') Name
			input#name.form-control(type='text'  name='name' value=user ? user.name: '' )
			label(for='phone') Phone
			input#phone.form-control(type='number'  name='phone' value=user ? user.phone: '' )
			label(for='avatar') Avatar
			input#avatar.form-control-file(type='file'  name='avatar' )
			button.mt-2.btn.btn-primary Create