extends ../layouts/common
block content	
	h3 User Login:
	if errors
		each error in errors
			.alert.alert-danger= error

	form(method='POST')
			label(for='name') Email
			input#name.form-control(type='text'  name='email' value=user ? user.email: '' )
			label(for='phone') Password
			input#phone.form-control(type='password'  name='password' value=user ? user.password: '' )
			button.mt-2.btn.btn-primary Submit